apiVersion: v1
kind: Secret
metadata:
  name: sendgrid-secret
  labels:
    app: sendgrid-secret
type: Opaque
data:
  SENDGRID_API_KEY: base64 encoded value
  MAIL_FROM_NAME: base64 encoded value
  MAIL_FROM_ADDRESS: base64 encoded value
  TEACHER_WEB_URL: base64 encoded value
  STUDENT_WEB_URL: base64 encoded value
  sendgrid-template-id.yaml: base64 encoded file
